#define scep_log(handle, verbosity, format, ...) \
    _scep_log(handle, verbosity, __FILE__, __LINE__, format, ##__VA_ARGS__)

#define SCEP_ERR(type, msg, ...)                        \
    do {                                                \
        error = type;                                   \
        if(msg)                                         \
            scep_log(handle, FATAL, msg, ##__VA_ARGS__);\
        goto finally;                                   \
    } while(0)

#define OSSL_ERR(msg, ...)                              \
    do {                                                \
        ERR_print_errors(handle->configuration->log);   \
        SCEP_ERR(SCEPE_OPENSSL, msg, ##__VA_ARGS__);    \
    } while(0)

typedef enum {
    FATAL,
    ERROR,
    WARN,
    INFO,
    DEBUG,
} SCEP_VERBOSITY;

typedef enum {
    /* Global options */
    SCEPCFG_VERBOSITY,
    SCEPCFG_SIGALG,
    SCEPCFG_ENCALG,
    SCEPCFG_LOG,

#ifndef OPENSSL_NO_ENGINE
    /* Engine stuff */
    SCEPCFG_ENGINE,
    SCEPCFG_ENGINE_OBJ,
    SCEPCFG_ENGINE_PARAM,
#endif /* OPENSSL_NO_ENGINE */

    /* Flags to be set */
    SCEPCFG_FLAG_CLEAR, // clear all flags
    SCEPCFG_FLAG_SET,
} SCEPCFG_TYPE;

typedef enum {
    SCEPE_OK,
    SCEPE_MEMORY,
