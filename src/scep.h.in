};
#endif /* OPENSSL_NO_ENGINE */

typedef struct {
    SCEP_VERBOSITY verbosity;
    EVP_MD *sigalg;
    EVP_CIPHER *encalg;
    BIO *log;
    SCEP_FLAGS flags;
#ifndef OPENSSL_NO_ENGINE
